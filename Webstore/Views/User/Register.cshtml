@model Webstore.Domain.ViewModel.User.RegisterViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Registration";
}

<h1>Регистрация</h1>
<hr />
<form asp-controller="User" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger text-left"></div>
    <div>
        <label>Name:</label>
        <div>
            <input asp-for="FirstName" placeholder="Ivan" type="text" required/>
        </div>
    </div>
    <div>
        <label>Last name:</label>
        <div>
            <input asp-for="LastName" placeholder="Vasilyev" type="text" required/>
        </div>
    </div>
    <div>
        <label>Middle name:</label>
        <div>
            <input asp-for="MiddleName" placeholder="Anatolyevich" type="text" required/>
        </div>
    </div>
    <div>
        <label>Password:</label>
        <div>
            <input asp-for="Password" placeholder="********" minlength="8" type="password" required/>
        </div>
    </div>
    <div>
        <label>Confirm password:</label>
        <div>
            <input asp-for="PasswordConfirm" placeholder="********" minlength="6" type="password" required/>
        </div>
    </div>
    <div>
        <label>Email:</label>
        <div>
            <input asp-for="Email" placeholder="example@mail.ru" type="email" required/>
        </div>
    </div>
    <div>
        <label>Phone:</label>
        <div>
            <input asp-for="Phone" placeholder="+78005553535" type="number" required/>
        </div>
    </div>
    <div>
        <label>Возраст</label>
        <div>
            <input asp-for="Age" placeholder="25" min="18" max="65" type="number" required/>
        </div>
    </div>
    <br />
    <button class="btn btn-success btn-lg float-right" type="submit">Register</button><br/>
    Account created yet? <a asp-controller="User" asp-action="Login" >Login</a>
</form>

